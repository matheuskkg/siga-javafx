<BorderPane maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" prefHeight="600.0" prefWidth="900.0" xmlns="http://javafx.com/javafx/23" xmlns:fx="http://javafx.com/fxml/1" fx:controller="fatec.sigafx.controller.ProfessorController">

    <left>
        <VBox maxWidth="500.0" minWidth="200.0" spacing="20.0" style="-fx-background-color: #2e4a5f; -fx-padding: 10px;" stylesheets="@../css/prof.css">
            <Text style="-fx-font-size: 24; -fx-fill: white;" text="Professor" textAlignment="CENTER" wrappingWidth="180.0">
                <VBox.margin>
                    <Insets bottom="20.0" top="20.0" />
                </VBox.margin></Text>
            <Button alignment="TOP_CENTER" minWidth="186.0" onAction="#mostrarInicio" styleClass="sidebar-button" text="Início" />
            <Button alignment="TOP_CENTER" minWidth="186.0" onAction="#mostrarNotas" styleClass="sidebar-button" text="Gerenciar Notas" />
            <Button alignment="TOP_CENTER" minWidth="186.0" onAction="#mostrarFaltas" styleClass="sidebar-button" text="Gerenciar Faltas" />
            <Separator orientation="VERTICAL" prefHeight="200.0" visible="false" VBox.vgrow="ALWAYS" />
            <Button alignment="TOP_CENTER" minWidth="186.0" onAction="#onLogoutClicked" styleClass="sidebar-exit" text="Sair">
                <VBox.margin>
                    <Insets bottom="20.0" />
                </VBox.margin></Button>
        </VBox>
    </left>

    <center>
        <StackPane stylesheets="@../css/prof.css">
            <VBox fx:id="gPrincipal" alignment="TOP_CENTER" spacing="20" styleClass="vBox">
                <Label styleClass="admin-header" text="Bem-vindo, Professor!">
                    <font>
                        <Font size="28.0" />
                    </font>
                </Label>
                <VBox alignment="CENTER" spacing="10">
                    <Label text="Aqui serão mostradas mensagens padrões." />
                </VBox>
            </VBox>
            <VBox fx:id="gNotas" alignment="TOP_CENTER" spacing="20" styleClass="vBox" visible="false">
                <Label styleClass="admin-header" text="Gerenciador de Notas">
                    <font>
                        <Font size="28.0" />
                    </font>
                </Label>
                 <Label text="Total de Alunos: ??" />
                 <VBox alignment="TOP_CENTER" spacing="20.0">
                     <HBox alignment="TOP_CENTER" maxWidth="800.0" spacing="10.0">
                         <VBox.margin>
                             <Insets left="20.0" right="20.0" />
                         </VBox.margin>
                         <Label minHeight="50.0" minWidth="80.0" text="Turma:" HBox.hgrow="ALWAYS">
                             <font>
                                 <Font size="24.0" />
                             </font>
                         </Label>
                         <!-- Tem que preencher essa ComboBox com todas as turmas relacionadas as Disciplinas que esse Professor é responsável -->
                         <ComboBox maxWidth="1.7976931348623157E308" minHeight="50.0" minWidth="300.0" promptText="Turma" HBox.hgrow="ALWAYS" />
                     </HBox>
                     <HBox alignment="TOP_CENTER" maxWidth="800.0" spacing="10.0">
                         <VBox.margin>
                             <Insets left="20.0" right="20.0" />
                         </VBox.margin>
                         <Label minHeight="50.0" minWidth="80.0" text="Aluno:" HBox.hgrow="ALWAYS">
                             <font>
                                 <Font size="24.0" />
                             </font>
                         </Label>
                         <!-- Tem que preencher essa ComboBox com todos os alunos cadastrados na Turma que foi selecionada na ComboBox de cima -->
                         <ComboBox maxWidth="1.7976931348623157E308" minHeight="50.0" minWidth="300.0" promptText="Aluno" HBox.hgrow="ALWAYS" />
                     </HBox>
                     <HBox alignment="TOP_CENTER" maxWidth="800.0" spacing="10.0">
                         <VBox.margin>
                             <Insets left="20.0" right="20.0" />
                         </VBox.margin>
                         <Label minHeight="50.0" minWidth="80.0" text="P1:" HBox.hgrow="ALWAYS">
                             <font>
                                 <Font size="24.0" />
                             </font>
                         </Label>
                         <!-- Aqui é onde o professor colocará a P1, precisa de um fx::id -->
                         <Spinner editable="true" maxWidth="1.7976931348623157E308" minHeight="50.0" minWidth="300.0" HBox.hgrow="ALWAYS" />
                     </HBox>
                     <HBox alignment="TOP_CENTER" maxWidth="800.0" spacing="10.0">
                         <VBox.margin>
                             <Insets left="20.0" right="20.0" />
                         </VBox.margin>
                         <Label minHeight="50.0" minWidth="80.0" text="P2:" HBox.hgrow="ALWAYS">
                             <font>
                                 <Font size="24.0" />
                             </font>
                         </Label>
                         <!-- Aqui é onde o professor colocará a P2, precisa de um fx::id -->
                         <Spinner editable="true" maxWidth="1.7976931348623157E308" minHeight="50.0" minWidth="300.0" HBox.hgrow="ALWAYS" />
                     </HBox>
                     <HBox alignment="TOP_CENTER" maxWidth="800.0" spacing="10.0">
                         <VBox.margin>
                             <Insets left="20.0" right="20.0" />
                         </VBox.margin>
                         <Label minHeight="50.0" minWidth="80.0" text="P3:" HBox.hgrow="ALWAYS">
                             <font>
                                 <Font size="24.0" />
                             </font>
                         </Label>
                         <!-- Aqui é onde o professor colocará a P3, precisa de um fx::id -->
                         <Spinner editable="true" maxWidth="1.7976931348623157E308" minHeight="50.0" minWidth="300.0" HBox.hgrow="ALWAYS" />
                     </HBox>
                     <HBox alignment="TOP_RIGHT" maxWidth="800.0" spacing="10.0">
                         <VBox.margin>
                             <Insets left="20.0" right="20.0" />
                         </VBox.margin>
                         <!-- Aqui é onde o professor clica pra lançar as notas, precisa de um onAction -->
                         <Button alignment="CENTER" minHeight="50.0" minWidth="100.0" mnemonicParsing="false" text="Atribuir">
                             <font>
                                 <Font size="12.0" />
                             </font>
                         </Button>
                         <!-- Aqui é onde o professor clica para limpar tudo, precisa de um onAction -->
                         <Button alignment="CENTER" minHeight="50.0" minWidth="100.0" mnemonicParsing="false" text="Limpar">
                             <font>
                                 <Font size="12.0" />
                             </font>
                         </Button>
                     </HBox>
                 </VBox>
                <StackPane.margin>
                    <Insets />
                </StackPane.margin>
            </VBox>
            <VBox fx:id="gFaltas" alignment="TOP_CENTER" spacing="20" styleClass="vBox" visible="false">
                <Label styleClass="admin-header" text="Gerenciador de Faltas">
                    <font>
                        <Font size="28.0" />
                    </font>
                </Label>
                 <Label text="Total de Alunos: ??" />
                <StackPane>
                    <VBox alignment="TOP_CENTER" spacing="20.0" visible="false">
                        <HBox alignment="TOP_CENTER" maxWidth="800.0" spacing="10.0">
                            <VBox.margin>
                                <Insets left="20.0" right="20.0" />
                            </VBox.margin>
                            <!-- Aqui precisa de um onAction para mostrar a VBox de Chamada -->
                            <Button minHeight="60.0" minWidth="120.0" mnemonicParsing="false" text="Realizar Chamada" />
                            <!-- Aqui precisa de um onAction para mostrar a VBox de Alterar Falta Manualmente -->
                            <Button maxWidth="120.0" minHeight="60.0" minWidth="120.0" mnemonicParsing="false" text="Alterar Faltas" />
                        </HBox>
                    </VBox>
                    <VBox alignment="TOP_CENTER" maxHeight="1.7976931348623157E308" maxWidth="1.7976931348623157E308" prefHeight="1110.0" prefWidth="1674.0" spacing="20.0" visible="false">
                        <HBox alignment="TOP_CENTER" maxHeight="30.0" maxWidth="800.0" spacing="10.0" VBox.vgrow="ALWAYS">
                            <VBox.margin>
                                <Insets left="20.0" right="20.0" />
                            </VBox.margin>
                            <!-- Tem que preencher essa ComboBox com todas as turmas relacionadas as Disciplinas que esse Professor é responsável -->
                            <ComboBox maxHeight="1.7976931348623157E308" maxWidth="1.7976931348623157E308" promptText="Turmas" HBox.hgrow="ALWAYS" />
                        </HBox>
                        <!-- Tem que preencher essa TableView com todos os alunos nessa Turma -->
                        <TableView maxHeight="1.7976931348623157E308" maxWidth="800.0" prefHeight="200.0" prefWidth="200.0" VBox.vgrow="ALWAYS">
                            <columns>
                                <TableColumn prefWidth="152.0" text="RA" />
                                <TableColumn prefWidth="340.0" text="Nome" />
                                <!-- Tem como fazer essa coluna mostrar CheckBox mas é meio complicado, depois mostro como faz -->
                                <TableColumn prefWidth="120.0" text="Presente ?" />
                            </columns>
                            <VBox.margin>
                                <Insets left="20.0" right="20.0" />
                            </VBox.margin>
                            <columnResizePolicy>
                                <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
                            </columnResizePolicy>
                        </TableView>
                        <HBox alignment="TOP_RIGHT" maxWidth="800.0" spacing="10.0" VBox.vgrow="NEVER">
                            <VBox.margin>
                                <Insets left="20.0" right="20.0" />
                            </VBox.margin>
                            <!-- Precisa de um onAction nesse botão para Concluir a Chamada -->
                            <Button minHeight="30.0" minWidth="60.0" mnemonicParsing="false" text="Concluir" />
                            <!-- Precisa de um onAction nesse botão para Limpar tudo -->
                            <Button minHeight="30.0" minWidth="60.0" mnemonicParsing="false" text="Limpar" />
                        </HBox>
                    </VBox>
                    <VBox alignment="TOP_CENTER" spacing="20.0">
                        <HBox alignment="TOP_CENTER" maxWidth="800.0" spacing="10.0">
                            <VBox.margin>
                                <Insets left="20.0" right="20.0" />
                            </VBox.margin>
                            <Label minHeight="50.0" minWidth="80.0" text="Turma:" HBox.hgrow="ALWAYS">
                                <font>
                                    <Font size="24.0" />
                                </font>
                            </Label>
                            <!-- Tem que preencher essa ComboBox com todas as turmas relacionadas as Disciplinas que esse Professor é responsável -->
                            <ComboBox maxWidth="1.7976931348623157E308" minHeight="50.0" minWidth="300.0" promptText="Turma" HBox.hgrow="ALWAYS" />
                        </HBox>
                        <HBox alignment="TOP_CENTER" maxWidth="800.0" spacing="10.0">
                            <VBox.margin>
                                <Insets left="20.0" right="20.0" />
                            </VBox.margin>
                            <Label minHeight="50.0" minWidth="80.0" text="Aluno:" HBox.hgrow="ALWAYS">
                                <font>
                                    <Font size="24.0" />
                                </font>
                            </Label>
                            <!-- Tem que preencher essa ComboBox com todos os alunos da Turma acima -->
                            <ComboBox maxWidth="1.7976931348623157E308" minHeight="50.0" minWidth="300.0" promptText="Aluno" HBox.hgrow="ALWAYS" />
                        </HBox>
                        <HBox alignment="TOP_CENTER" maxWidth="800.0" spacing="10.0">
                            <VBox.margin>
                                <Insets left="20.0" right="20.0" />
                            </VBox.margin>
                            <Label minHeight="50.0" minWidth="80.0" text="Faltas:" HBox.hgrow="ALWAYS">
                                <font>
                                    <Font size="24.0" />
                                </font>
                            </Label>
                            <!-- Precisa de um fx::id nesse Spinner para já aparecer com as faltas desse aluno e poder aumentar ou diminuir -->
                            <Spinner editable="true" maxWidth="1.7976931348623157E308" minHeight="50.0" minWidth="300.0" HBox.hgrow="ALWAYS" />
                        </HBox>
                        <HBox alignment="TOP_RIGHT" maxWidth="800.0" spacing="10.0">
                            <VBox.margin>
                                <Insets left="20.0" right="20.0" />
                            </VBox.margin>
                            <!-- Precisa de um onAction nesse botão para Concluir a Chamada -->
                            <Button alignment="CENTER" minHeight="50.0" minWidth="100.0" mnemonicParsing="false" text="Atribuir" />
                            <!-- Precisa de um onAction nesse botão para Limpar tudo -->
                            <Button alignment="CENTER" minHeight="50.0" minWidth="100.0" mnemonicParsing="false" text="Limpar" />
                        </HBox>
                    </VBox>
                </StackPane>
            </VBox>
        </StackPane>
    </center>

</BorderPane>
